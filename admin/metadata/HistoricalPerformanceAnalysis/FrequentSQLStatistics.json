{
  "view": {
    "name": "dropdown-view"
  },
  "layout": {
    "container": "panel",
    "metadata": {
      "items": [
        {
          "style": {
            "flex": 1
          },
          "equally": true,
          "columns": [
            {
              "slot": "toolbar",
              "style": {
                "flex": 24
              }
            }
          ]
        },
        {
          "style": {
            "flex": 10
          },
          "equally": true,
          "columns": [
            {
              "slot": "grid",
              "style": {
                "flex": 24
              }
            }
          ]
        },
        {
          "style": {
            "flex": 6
          },
          "equally": false,
          "columns": [
            {
              "slot": "chart",
              "style": {
                "flex": 24
              }
            }
          ]
        },
        {
          "style": {
            "flex": 1
          },
          "equally": true,
          "columns": [
            {
              "slot": "toolbarFoot",
              "style": {
                "flex": 24
              }
            }
          ]
        }
      ]
    }
  },
  "components": {
    "toolbar": {
      "component": "toolbar",
      "metadata": {
        "children": {
          "method": "remote",
          "url": "/ToolbarMetadata/HistoricalPerformanceAnalysis/FrequentSQLStatistics",
          "data": []
        },
        "events": {
          "click#click": [
            {
              "method": "loadData",
              "params": []
            }
          ]
        }
      },
      "id": "toolbar"
    },
    "grid": {
      "id": "grid",
      "component": "grid",
      "metadata": {
        "pagination": false,
        "columns": {
          "method": "remote",
          "url": "/GridMetadata/HistoricalPerformanceAnalysis/FrequentSQLStatistics"
        },
        "source": {
          "method": "static",
          "data": []
        },
        "events": {
          "row-click": [
            {
              "target": "toolbarFoot",
              "method": "trigger",
              "params": [
                "\"SQL_Evaluator\"",
                "\"setQuery\"",
                "{ session: row.session }"
              ]
            },
            {
              "target": "toolbarFoot",
              "method": "trigger",
              "params": [
                "\"Execution_History_Of_SQL_Pattern\"",
                "\"setQuery\"",
                "{ session: row.session }"
              ]
            }
          ]
        }
      }
    },
    "chart": {
      "id": "chart",
      "component": "chart",
      "metadata": {
        "height": "98%",
        "settings": {
          "type": "histogram",
          "metrics": [
            "op+"
          ],
          "dimension": [
            "session"
          ],
          "labelMap": {
            "session": "Session",
            "op+": "OP+"
          }
        },
        "columns": [
          "session",
          "op+"
        ]
      }
    },
    "toolbarFoot": {
      "component": "toolbar",
      "metadata": {
        "children": {
          "method": "remote",
          "url": "/ToolbarMetadata/HistoricalPerformanceAnalysis/FrequentSQLStatisticsFoot",
          "data": []
        },
        "events": {}
      },
      "id": "toolbarFoot"
    }
  },
  "http": [
    {
      "name": "loadData",
      "method": "get",
      "url": "/sqlSkeletonAnalysis/heavySql64",
      "params":{},
      "time": 1000,
      "autostart": true,
      "repeat": false,
      "immediate": false,
      "success": {
        "trigger": [
          {
            "target": "grid",
            "method": "setData",
            "params": [
              "response.data.data.items"
            ]
          },
          {
            "target": "chart",
            "method": "setData",
            "params": [
              "response.data.data.items"
            ]
          }
        ]
      },
      "error": {
        "message": "请求错误!"
      }
    }
  ]
}
